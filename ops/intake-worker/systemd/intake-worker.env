# Required intake configuration
INTAKE_STORAGE_ACCOUNT=stairostorage
INTAKE_CONTAINER=ro-raw
INTAKE_ALLOWED_EXT=xml
INTAKE_MAX_BYTES=5242880
INTAKE_WELLFORMED_XML=1

# Ingest API
INGEST_API_URL=https://sharktoothai.com/workloads/ro/ingest-from-storage
INGEST_AAD_AUDIENCE=api://00000000-0000-0000-0000-000000000000
INGEST_API_TIMEOUT_MS=15000

# Database (required for intake state + metrics)
DATABASE_URL=postgres://user:password@host:5432/db?sslmode=require

# Queue access (use account name + MSI or a connection string)
EVENTGRID_QUEUE_ACCOUNT=stairostorage
# EVENTGRID_QUEUE_CONNECTION_STRING=

# Worker behavior
WORKER_ID=stai-intake-worker-1
EVENTGRID_QUEUE_NAME=ro-sftp-events
EVENTGRID_QUEUE_POISON_NAME=ro-sftp-events-poison
EVENTGRID_QUEUE_POLL_MS=2000
EVENTGRID_QUEUE_BATCH_SIZE=10
EVENTGRID_QUEUE_VISIBILITY_TIMEOUT=30
EVENTGRID_QUEUE_MAX_DEQUEUE=5
METRICS_LOG_EVERY=10
METRICS_FLUSH_EVERY=25
